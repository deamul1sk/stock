@using PagedList
@using PagedList.Mvc

@model List<Warehouse.Models.Sold>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Sold</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="">Home</li>
                    <li class="active">Sold</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-sm-9"><strong class="card-title">Data Table</strong></div>
                        <div class="col-sm-3 text-right">
                            
                        </div>


                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Bill</th>
                                    <th>Quantity</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td id="Display_DetailBill_@Html.DisplayFor(modelItem => item.id)">
                                            @Html.DisplayFor(modelItem => item.Detail_Product.Product.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Detail_Product.Bill.address)
                                        </td>

                                        <td id="Display_Quantity_@Html.DisplayFor(modelItem => item.id)">
                                            @Html.DisplayFor(modelItem => item.quantity)
                                        </td>
                                        <td id="Display_Quantity_@Html.DisplayFor(modelItem => item.id)">
                                            @Html.DisplayFor(modelItem => item.date)
                                        </td>
                                        <td style="display: none" id="Display_idDetailBill_@Html.DisplayFor(modelItem => item.id)">
                                            @Html.DisplayFor(modelItem => item.Detail_Product.id)
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->


<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
