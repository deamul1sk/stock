@using PagedList
@using PagedList.Mvc

@model List<Warehouse.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Product</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="">Home</li>
                    <li class="Product">Home</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-sm-9"><strong class="card-title">Data Table</strong></div>
                        <div class="col-sm-3 text-right">
                            <button class="btn btn-success" data-toggle="modal" data-target="#Insert">Add</button>
                        </div>
                        

                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Chuc nang</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.price)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<div id="dialog">
    <div class="modal fade bs-example-modal-lg" id="Insert" tabindex="-1"
         role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="col-sm-8" style="padding-left: 0px;">
                        <h4 class="modal-title" id="myModalLabel"
                            style="font-size: 18px; margin: 0px">
                            Modal title
                        </h4>
                    </div>
                    <div class="col-sm-2" style="padding-right: 0px;">
                        <button type="button" class="close" data-dismiss="modal"
                                aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>


                </div>
                <form action="/BasicTraining_HR/leader/add-employee/insert"
                      method="post" class="form-horizontal"
                      enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="card">


                            <div class="card-body card-block">

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="Basic_Name" class="form-control-label">Name</label>
                                        <span style="color: red; font-size: 17px; padding-bottom: 10px;">*</span>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="Insert_Name" name="name"
                                               placeholder="Name" value="" class="form-control"><small class="form-text text-muted"></small> <small class="help-block form-text" style="color: red;"
                                                                                                                                                    id="Basic_s-Name"></small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div style="top: -13px; color: gray; left: 10px; position: absolute; padding-left: 0px; font-size: 14px">
                                        Basic
                                    </div>
                                    <div class="col col-md-3">
                                        <label for="Basic_Email" class=" form-control-label">Email</label>
                                        <span style="color: red; font-size: 17px; padding-bottom: 10px;">*</span>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="email" id="Insert_Email" name="email"
                                               placeholder="Enter" value=""
                                               class="form-control"><small class="form-text text-muted">
                                            Please enter the format
                                            correctly: abc@example.com
                                        </small> <small class="help-block form-text" style="color: red;"
                                                        id="Basic_s-Email"></small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="Basic_Date" class=" form-control-label">Date</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input id="Insert_Date" type="date" value=""
                                               name="date" placeholder="Text" class="form-control"
                                               min="1870-12-31" max="2000-01-01"> <small class="form-text text-muted"></small> <small class="help-block form-text" style="color: red;"
                                                                                                                                      id="Basic_s-Date"></small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class=" form-control-label" id="Insert_Sex">Sex</label>
                                    </div>
                                    <div class="col col-md-9">
                                        <div class="form-check">
                                            <div class="radio">
                                                <label for="Insert_Sex_Boy" class="form-check-label ">
                                                    <input type="radio" id="Insert_Sex_Boy" name="sex"
                                                           value="Boy" class="form-check-input">Boy
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label for="Insert_Sex_Girl" class="form-check-label ">
                                                    <input type="radio" id="Insert_Sex_Girl" name="sex"
                                                           value="Girl" class="form-check-input">Girl
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label for="Insert_Sex_Other" class="form-check-label ">
                                                    <input type="radio" id="Insert_Sex_Other" name="sex"
                                                           value="Other" class="form-check-input">Other
                                                </label>
                                            </div>

                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="idEmp" id="frmInsert_Id" value="">
                        <button type="button" class="btn btn-danger">Reset</button>
                        <button type="submit" class="btn btn-primary">
                            Save
                            changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
